<SettingAddCamera>:
    titleLabel: title_label
    name_lbl: device_name_label
    name_txt: device_name_text
    stream_url_lbl: stream_url_label
    stream_url_txt: stream_url_txt
    desc_lbl: desc_lbl
    desc_txt: desc_txt
    btnAdd: btn_add
    btnCancel: btn_cancel

    Label:
        id: title_label
        x_offset : 0.2
        text : root.titleLabelText
        font_size : 24
        font_family : 'arial' 
        halign : 'center' 
        valign : 'middle' 
        center_x : device_name_text.center_x
        top : root.top - dp(20)
        size_hint : (None, None)
        size : (dp(250), dp(30))
        text_size : self.size

    Label:
        id: device_name_label
        x_offset : 0.2
        text : 'Name'
        text_size : self.size
        font_size : 16
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: title_label.y - dp(20)
        size_hint : (None, None)
        size : dp(120), dp(20)

    TextInput:
        id: device_name_text
        x_offset : 0.2
        foreground_color: (0.1, 0.1, 0.1)
        multiline : False
        font_size: 20
        font_family: "arial"
        size_hint: None, None
        size: dp(300), dp(35)
        pos_hint : {'x':self.x_offset}
        top: device_name_label.y - dp(3)
        background_normal : "images/settingview/text_normal.png"
        background_disabled_normal : "images/settingview/text_normal.png"
        background_active : "images/settingview/text_normal.png"

    Label:
        id: stream_url_label
        x_offset : 0.2
        text : 'Stream URL'
        text_size : self.size
        font_size : 16
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: device_name_text.y - dp(12)
        size_hint : (None, None)
        size : dp(120), dp(20)

    TextInput:
        id: stream_url_txt
        x_offset : 0.2
        foreground_color: (0.1, 0.1, 0.1)
        multiline : False
        font_size: 20
        font_family: "arial"
        size_hint: None, None
        size: dp(300), dp(35)
        pos_hint : {'x':self.x_offset}
        top: stream_url_label.y - dp(3)
        background_normal : "images/settingview/text_normal.png"
        background_disabled_normal : "images/settingview/text_normal.png"
        background_active : "images/settingview/text_normal.png"

    Label:
        id: desc_lbl
        x_offset : 0.2
        text : 'Description'
        text_size : self.size
        font_size : 16
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: stream_url_txt.y - dp(12)
        size_hint : (None, None)
        size : dp(120), dp(20)

    TextInput:
        id: desc_txt
        x_offset : 0.2
        foreground_color: (0.1, 0.1, 0.1)
        multiline : False
        font_size: 20
        font_family: "arial"
        size_hint: None, None
        size: dp(300), dp(35)
        pos_hint : {'x':self.x_offset}
        top: desc_lbl.y - dp(3)
        background_normal : "images/settingview/text_normal.png"
        background_disabled_normal : "images/settingview/text_normal.png"
        background_active : "images/settingview/text_normal.png"

    ImageButton:
        id : btn_add
        source: 'images/settingview/btn_add.png'
        size_hint: (None, None)
        size: (dp(150), dp(35))
        x : desc_txt.x
        top: desc_txt.y - dp(20)
        on_press: root.button_press_callback(self)
        on_release: root.button_release_callback(self), root.add_new_device(device_name_text, stream_url_txt, desc_txt)
        opacity: 1.0 if self.disabled == False else 0.7

    ImageButton:
        id : btn_cancel
        source: 'images/settingview/btn_cancel.png'
        size_hint: (None, None)
        size: (dp(135), dp(35))
        x : btn_add.right + dp(15)
        y : btn_add.y
        on_press: root.button_press_callback(self)
        on_release: root.button_release_callback(self)
        opacity: 1.0 if self.disabled == False else 0.7