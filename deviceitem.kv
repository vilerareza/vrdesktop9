<DeviceItem>:

    bg_img : bg_img
    img_icon : img_icon
    lbl_name : lbl_name
    btn_edit : btn_edit
    btn_delete : btn_delete
    orientation :  'vertical'
    size_hint : (None, None)
    size : (dp(180),dp(230)) 

    #canvas.before:
    #    Color:
    #        rgb : (0.2,0.2,0.2)
    #    Rectangle:
    #        size : self.size
    #        pos : self.pos

    Image:
        id : bg_img
        source : "images/settingview/device_item.png"
        fit_mode : 'contain'
        size_hint : (1,1)
        pos_hint : {'center_x':0.5, 'center_y':0.5}

    Image:
        id : img_icon
        source : "images/settingview/placeholder.png"
        fit_mode : 'contain'
        size_hint : (None, None)
        size : (dp(170),dp(100)) 
        top : root.top - dp(5)
        pos_hint : {'center_x':0.5}
    
    Label:
        id: lbl_name
        markup : True
        text:"[color=ffffff]"+root.display_name+"[/color]"
        text_size : self.size
        font_size : dp(18)
        font_family : "arial"
        halign : "left"
        valign : "top"
        size_hint : (None, None)
        size : (dp(160),dp(25))
        x : root.x + dp(10)
        top : img_icon.y - dp(10)
    
    Label:
        id: lbl_desc
        markup : True
        text:"[color=dddddd]"+root.desc+"[/color]"
        text_size : self.size
        font_size : dp(14)
        font_family : "arial"
        halign : "left"
        valign : "top"
        size_hint : (None, None)
        size : (dp(160),dp(25))
        x : root.x + dp(10)
        top : lbl_name.y - dp(10)

    ImageButton:
        id : btn_edit
        source: 'images/settingview/btn_edit_device.png'
        fit_mode: 'contain'
        size_hint: (None, None)
        size: (dp(85), dp(30))
        x : root.x + dp(20)
        y : root.y + dp(10)
        on_press : root.button_press_callback(self)
        on_release : root.button_release_callback(self)
        
    ImageButton:
        id : btn_delete
        source: 'images/settingview/btn_delete.png'
        mipmap : True
        fit_mode: 'contain'
        size_hint: (None, None)
        size: (dp(30), dp(30))
        right : root.right - dp(20)
        y : root.y + dp(10)
        on_press : root.button_press_callback(self)
        on_release : root.button_release_callback(self)