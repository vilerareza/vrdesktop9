<SettingContentCamera>:
    titleLabel: title_label
    lbl_name: lbl_name
    txt_name: txt_name
    lbl_stream_url: lbl_stream_url
    txt_stream_url: txt_stream_url
    lbl_desc: lbl_desc
    txt_desc: txt_desc
    lbl_enable: lbl_enable
    sw_enable: sw_enable
    btnSaveEdit: btn_save_edit
    btnRemove: btn_remove

    Label:
        id: title_label
        x_offset : 0.2
        text : 'Device Info'
        font_size : 24
        font_family : 'arial' 
        halign : 'center' 
        valign : 'middle' 
        #pos_hint : {'x':self.x_offset} #, 'top': 0.95}
        center_x : txt_name.center_x
        top : root.top - dp(20)
        size_hint : (None, None)
        size : (dp(180), dp(30))
        text_size : self.size

    ImageButton:
        id: btn_remove
        source: 'images/settingview/btn_remove.png'
        size_hint: (None, None)
        size: (dp(40), dp(40))
        right : txt_name.right
        top: title_label.y - dp(20)
        on_press: root.button_press_callback(self)
        on_release: root.button_release_callback(self)

    ImageToggle:
        id: btn_save_edit
        source: 'images/settingview/btn_edit.png'
        size_hint: (None, None)
        size: (dp(40), dp(40))
        right : btn_remove.x - dp(10)
        top: btn_remove.top
        on_state : root.toggle_press_callback(self)
        source : 'images/settingview/btn_save.png' if root.editMode == True else 'images/settingview/btn_edit.png'

    Label:
        id: lbl_name
        x_offset : 0.2
        text : 'Name'
        text_size : self.size
        font_size : 16
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: btn_save_edit.y - dp(5)
        size_hint : (None, None)
        size : dp(120), dp(20)

    TextInput:
        id: txt_name
        x_offset : 0.2
        foreground_color: (0.1, 0.1, 0.1)
        #background_color: (0.8, 0.8, 0.8)
        multiline : False
        font_size: 20
        font_family: "arial"
        size_hint: None, None
        size: dp(300), dp(35)
        pos_hint : {'x':self.x_offset}
        top: lbl_name.y - dp(3)
        background_normal : "images/settingview/text_normal.png"
        background_disabled_normal : "images/settingview/text_normal.png"
        background_active : "images/settingview/text_normal.png"
        disabled: True if root.editMode == False else False

    Label:
        id: lbl_stream_url
        x_offset : 0.2
        text : 'Stream URL'
        text_size : self.size
        font_size : 16
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: txt_name.y - dp(15)
        size_hint : (None, None)
        size : dp(120), dp(20)

    TextInput:
        id: txt_stream_url
        x_offset : 0.2
        foreground_color: (0.1, 0.1, 0.1)
        #background_color: (0.8, 0.8, 0.8)
        multiline : False
        font_size: 20
        font_family: "arial"
        size_hint: None, None
        size: dp(300), dp(35)
        pos_hint : {'x':self.x_offset}
        top: lbl_stream_url.y - dp(3)
        background_normal : "images/settingview/text_normal.png"
        background_disabled_normal : "images/settingview/text_normal.png"
        background_active : "images/settingview/text_normal.png"
        disabled: True if root.editMode == False else False

    Label:
        id: lbl_desc
        x_offset : 0.2
        text : 'Description'
        text_size : self.size
        font_size : 16
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: txt_stream_url.y - dp(15)
        size_hint : (None, None)
        size : dp(120), dp(20)

    TextInput:
        id: txt_desc
        x_offset : 0.2
        foreground_color: (0.1, 0.1, 0.1)
        #background_color: (0.8, 0.8, 0.8)
        multiline : False
        font_size: 20
        font_family: "arial"
        size_hint: None, None
        size: dp(300), dp(35)
        pos_hint : {'x':self.x_offset}
        top: lbl_desc.y - dp(3)
        background_normal : "images/settingview/text_normal.png"
        background_disabled_normal : "images/settingview/text_normal.png"
        background_active : "images/settingview/text_normal.png"
        disabled: True if root.editMode == False else False

    Label:
        id: lbl_enable
        x_offset : 0.2
        text : 'Enabled'
        text_size : self.size
        font_size : 20
        font_family : 'arial'
        halign : 'left' 
        valign : 'bottom'
        pos_hint : {'x':self.x_offset}
        top: txt_desc.y - dp(25)
        size_hint : (None, None)
        size : dp(120), dp(20)
    
    Switch:
        id: sw_enable
        size_hint : (None, None)
        size : (dp(90), dp(40))
        right : txt_desc.right
        center_y : lbl_enable.center_y
        disabled: True if root.editMode == False else False