<SettingView>:
    server_box : server_box
    deviceList : device_list
    #settingContentBox : setting_content_box
    manager: app.manager
    
    BoxLayout:
        id : main_box
        orientation : 'vertical'
        size_hint : (1.5,1)
        canvas.before:
            Color:
                rgb : (0.15,0.15,0.15)
            Rectangle:
                size : self.size
                pos : self.pos
        
        ServerBox:
            id : server_box
            deviceListLayout : device_list.deviceListLayout
            setting_view : root
            size_hint : (1, 0.2)
        
        DeviceListBox:
            id : device_list
            settingView: root
            serverBox : server_box
            # settingContentBox : setting_content_box

        

