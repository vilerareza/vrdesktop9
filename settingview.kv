<SettingView>:

    server_box : server_box
    deviceList : device_list
    manager: app.manager
    
    BoxLayout:

        id : main_box
        orientation : 'vertical'
        size_hint : (1.5,1)
        canvas.before:
            Color:
                rgb : (0.1,0.1,0.1)
            Rectangle:
                size : self.size
                pos : self.pos
        
        ServerBox:
            id : server_box
            deviceListLayout : device_list.deviceListLayout
            setting_view : root
            size_hint : (1, 0.2)
        
        DeviceListBox:
            id : device_list
            setting_view: root
            serverBox : server_box


<ServerSettingPopup>:
    size_hint: (None, 0.4)
    width: dp(350)
    auto_dismiss : False

<DeviceSettingPopup>:
    size_hint: (None, 0.85)
    width: dp(450)
    auto_dismiss : False

<DeviceAddPopup>:
    size_hint: (None, 0.85)
    width: dp(450)
    auto_dismiss : False

