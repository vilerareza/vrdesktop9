<DeviceIcon>:
    statusImage : status_image
    deviceLabel : device_label
    disabled : True

    Image:
        id : status_image
        pos_hint : {'center_x':0.5, 'center_y': 0.5}
        fit_mode : 'contain'
        source : "images/multiview/connecting.png"

    Label:
        id : device_label
        text : ''
        font_size : dp(18)
        font_family : "arial" 
        halign : 'center'
        valign : 'middle'
        size_hint : (None, None)
        size : (dp(120), dp(40)) 
        pos_hint : {'center_x':0.5, 'center_y': 0.5}
        markup : True