<DeviceIcon>:
    statusImage : status_image
    deviceLabel : device_label
    disabled : True

    Image:
        id : status_image
        pos_hint : {'center_x':0.5, 'center_y': 0.5}
        source : "images/multiview/connecting.png"
    Label:
        id : device_label
        text : ""
        font_size : 18
        font_family : "arial" 
        halign : 'center'
        valign : 'middle'
        size_hint : (None, None)
        size : (120,40) 
        pos_hint : {'center_x':0.5, 'center_y': 0.5}
        markup : True