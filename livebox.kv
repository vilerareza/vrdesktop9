#: import livestream livestream
#: import liveactionbar liveactionbar

<LiveBox>:

    manager : app.manager
    size_hint: None, None
    live_stream : live_stream
    liveActionBar : live_action_bar
    closeMe : close_me

    LiveStream:
        id : live_stream
        pos_hint : {'center_x':0.5, 'center_y': 0.5}
        size_hint :(None, None) 
        size : (1280, 720) 
        fit_mode : 'contain'
        # allow_stretch : True

    LiveActionBar:
        id : live_action_bar
        opacity : 0
        size_hint : None, None
        width : live_stream.width * 0.7
        # height : live_stream.height * 0.1
        height : dp(45)
        pos_hint: {'center_x' : 0.5}
        y : live_stream.y
    
    Image:
        id : close_me
        opacity : 0
        source : 'images/multiview/close_normal.png'
        size_hint : None, None
        # width : live_stream.width * 0.7
        # height : live_stream.height * 0.1
        size : (dp(40), dp(40))
        top : live_stream.top - dp(10)
        right : live_stream.right - dp(10)
        on_touch_down: root.button_touch_down(*args)
        on_touch_up: root.button_touch_up(*args)