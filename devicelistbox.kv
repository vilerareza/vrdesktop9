<DeviceListBox>:

    deviceListLayout : device_list_layout
    btn_device_add: device_add_button
    btnRefresh: btn_refresh
    orientation: 'vertical'

    FloatLayout:

        id : header_float
        size_hint : (1, None)
        height : dp(70)
        canvas.before:
            Color:
                rgb : (0.15,0.15,0.15)
            Rectangle:
                size : self.size
                pos : self.pos

        Label:
            text: 'Devices'
            size_hint : (None, None)
            size: dp(150), dp(25)
            text_size : self.size
            halign : 'left'
            valign : 'middle'
            font_size: dp(18)
            font_family: "arial"
            x: header_float.x + dp(30)
            pos_hint : {'center_y': 0.4}

        ImageButton:
            id : device_add_button
            source: 'images/settingview/btn_add_icon.png'
            fit_mode : 'contain'
            size_hint: (None, None)
            size: (dp(75), dp(40))
            right : header_float.right - dp(30)
            pos_hint : {'center_y': 0.4}
            on_press : root.button_press_callback(self)
            on_release : root.button_release_callback(self)
        
        ImageButton:
            id : btn_refresh
            source: 'images/settingview/btn_refresh.png'
            fit_mode : 'contain'
            size_hint: (None, None)
            size: (dp(40), dp(40))
            right : device_add_button.x - dp(10)
            pos_hint : {'center_y': 0.4}
            on_press : root.button_press_callback(self)
            on_release : root.button_release_callback(self)

    DeviceList:
        id : device_list_layout
        serverBox : root.serverBox
        settingContentBox : root.settingContentBox
        spacing : dp(35)
        padding : [40, 20, 40, 40]
        canvas.before:
            Color:
                rgb : (0.15,0.15,0.15)
            Rectangle:
                size : self.size
                pos : self.pos